<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="430dp" android:layout_height="match_parent" >

	<ScrollView android:id="@+id/dex__1" 
		android:layout_width="430dp"
		android:layout_height="match_parent"
		android:background="@drawable/_bg__dex__1_ek2_shape">

		<RelativeLayout android:id="@+id/content_container" 
			android:layout_width="410dp"
			android:layout_height="wrap_content" >

			<RelativeLayout
				android:id="@+id/pagedex1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				>

				<RelativeLayout
					android:id="@+id/search_bar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50dp"
					android:layout_marginTop="314dp">

					<EditText
						android:id="@+id/timkiem"
						android:layout_width="163.4dp"
						android:layout_height="71.22dp"
						android:layout_gravity="center_horizontal|center"
						android:layout_marginLeft="50dp"
						android:layout_marginTop="3dp"
						android:gravity="center"
						android:hint="Tìm Kiếm"
						android:textColor="@color/_bg__dex__1_ek2_color"
						android:textSize="24sp" />
				</RelativeLayout>


				<RelativeLayout
					android:id="@+id/profile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="300dp"
					android:layout_marginTop="232dp">


					<RelativeLayout
						android:id="@+id/profile_icon"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="-0.29dp"
						android:layout_marginTop="-0.29dp">


						<ImageView
							android:id="@+id/path"
							android:layout_width="34.77dp"
							android:layout_height="34.77dp"
							android:layout_marginStart="0dp"
							android:layout_marginTop="0dp"
							android:contentDescription="path"
							android:src="@drawable/path" />

						<ImageView
							android:id="@+id/path_ek1"
							android:layout_width="12.38dp"
							android:layout_height="12.38dp"
							android:layout_marginStart="11dp"
							android:layout_marginTop="8dp"
							android:contentDescription="path_ek1"
							android:src="@drawable/path_ek1" />

						<ImageView
							android:id="@+id/path_ek2"
							android:layout_width="22.85dp"
							android:layout_height="6.65dp"
							android:layout_marginStart="6dp"
							android:layout_marginTop="24dp"
							android:contentDescription="path_ek2"
							android:src="@drawable/path_ek2" />

					</RelativeLayout>

				</RelativeLayout>


				<RelativeLayout
					android:id="@+id/dex_giohang"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="350dp"
					android:layout_marginTop="48dp">


					<View
						android:id="@+id/ellipse_ek2"
						android:layout_width="41dp"
						android:layout_height="38dp"
						android:layout_marginStart="0dp"
						android:layout_marginTop="0dp"
						 />

					<ImageView
						android:id="@+id/paw_icon"
						android:layout_width="33.47dp"
						android:layout_height="31.02dp"
						android:layout_marginStart="3dp"
						android:layout_marginTop="3dp"
						android:contentDescription="paw_icon"
						android:src="@drawable/paw_icon" />

				</RelativeLayout>


				<RelativeLayout
					android:id="@+id/scanner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="71dp"
					android:layout_marginTop="228dp">


					<ImageView
						android:id="@+id/camera_icon"
						android:layout_width="38dp"
						android:layout_height="38dp"
						android:layout_marginStart="4dp"
						android:layout_marginTop="4dp"
						android:contentDescription="camera_icon"
						android:src="@drawable/camera_icon" />

				</RelativeLayout>

				<ImageView
					android:id="@+id/dropdown"
					android:layout_width="41dp"
					android:layout_height="34dp"
					android:layout_marginStart="22dp"
					android:layout_marginTop="48dp"
					android:contentDescription="dropdown"
					android:src="@drawable/dropdown" />

				<ImageView
					android:id="@+id/logo"
					android:layout_width="150dp"
					android:layout_height="150dp"
					android:layout_marginStart="118dp"
					android:layout_marginTop="87dp"
					android:contentDescription="logo"
					android:src="@drawable/logo2" />

				<ImageView
					android:id="@+id/filter_icon"
					android:layout_width="42dp"
					android:layout_height="40dp"
					android:layout_marginStart="300dp"
					android:layout_marginTop="314dp"
					android:contentDescription="filter_icon"
					android:src="@drawable/filter_icon" />

				<GridView
					android:id="@+id/gridView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="400dp"
					android:gravity="center"
					android:horizontalSpacing="20dp"
					android:numColumns="2"
					android:padding="10dp"
					android:stretchMode="columnWidth"
					android:verticalSpacing="10dp"></GridView>

				<Button
					android:id="@+id/btnThem"
					android:layout_below="@+id/gridView"
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:backgroundTint="@color/colorPrimaryDark"
					android:fontFamily="@font/chango"
					android:gravity="center"
					android:text="Thêm Pet"
					android:textColor="#FFFFFF"
					android:textSize="24sp" />
			</RelativeLayout>


		</RelativeLayout>

	</ScrollView>
</HorizontalScrollView>